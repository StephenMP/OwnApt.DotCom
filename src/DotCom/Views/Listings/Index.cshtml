@model OwnApt.DotCom.Model.Home.HomeIndexViewModel

@{
    var authText = User.Identity.IsAuthenticated ? "Logout" : "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="View our listings of properties we manage.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">

    <title>Property Listings</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en" rel="stylesheet" />


    <environment names="Development">
        <link href="~/lib/material-design-lite/material.min.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/content/css/home/Index.css" rel="stylesheet" />

        <script src="~/lib/material-design-lite/material.min.js"></script>
    </environment>

    <environment names="Staging,Production">
        <link href="~/content-min/css/listings/Index.min.css" rel="stylesheet" type="text/css" />
        <script src="~/content-min/js/listings/Index.min.js" type="text/javascript"></script>
    </environment>

</head>
<body>
    <div class="oa-home-layout mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="oa-home-layout__header mdl-layout__header mdl-layout__header--waterfall">
            <div class="mdl-layout__header-row">
                <span class="mdl-layout-title"><img src="~/images/Logo/Logo_50x48.png" /> OwnApt</span>
                <div class="mdl-layout-spacer"></div>
                <nav id="oa-header-nav" class="mdl-navigation">
                    <a class="mdl-navigation__link" href="@Url.Action("Index", "Home")">Home</a>
                    <a class="mdl-navigation__link" href="http://blog.ownapt.com">Blog</a>
                    <a class="mdl-navigation__link" href="@Url.Action(authText, "Account")">@authText</a>
                </nav>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Menu</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" href="@Url.Action("Index", "Home")">Home</a>
                <a class="mdl-navigation__link" href="http://blog.ownapt.com">Blog</a>
                <a class="mdl-navigation__link" href="@Url.Action(authText, "Account")">@authText</a>
            </nav>
        </div>
        <main class="oa-home-content mdl-layout__content">
            <section class="oa-home-top oa-section">
                <div class="mdl-typography--text-center mdl-color-text--white">
                    <img width="200" height="193" src="~/images/Logo/Logo_250x241.png" />
                    <h1 class="mdl-typography--display-4">OwnApt</h1>
                    <h3 class="mdl-typography--body-1">All of our homes are currently occupied. Please contact us if you have any questions</h3>
                </div>
            </section>
            <footer class="mdl-mini-footer">
                <div class="mdl-mini-footer--left-section">
                    <div class="mdl-typography--body-1">&copy; @DateTime.Now.Year OwnApt, LLC | All Rights Reserved.</div>
                </div>
                <div class="mdl-mini-footer--right-section">
                    <div class="mdl-typography--body-1"><a class="mdl-navigation__link" href="#"><i class="fa fa-2x fa-facebook"></i></a></div>
                </div>
            </footer>
        </main>
    </div>
    @*Google Analytics*@
    <script>(function (i, s, o, g, r, a, m) { i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () { (i[r].q = i[r].q || []).push(arguments) }, i[r].l = 1 * new Date(); a = s.createElement(o), m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m) })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga'); ga('create', 'UA-77180345-1', 'auto'); ga('send', 'pageview');</script>
</body>
</html>