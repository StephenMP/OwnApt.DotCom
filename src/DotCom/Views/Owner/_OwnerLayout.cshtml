@{
    Layout = "_Layout";
}

@section Styles{

    <environment names="Development">
        <link rel="stylesheet" type="text/css" href="~/css/owner.css" />
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" type="text/css" href="~/css/owner.min.css" />
    </environment>
}
@section TopNavBar{
    <div id="TopNavBar">
        <nav id="TopNavBar" class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#owner-topnav-collapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a id="owner-navbar-logo" href="@Url.Action("Index")" class="navbar-left"><img src="~/images/Logo/Logo_50x48.png"></a>
                    <a class="navbar-brand" href="@Url.Action("Index")">OwnApt</a>
                </div>

                <div class="collapse navbar-collapse" id="owner-topnav-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Logout", "Account")">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
}

@section SideNavBar{
    <div class="sidenav">
        <ul class="nav">
            <li class="active" data-toggle="popover" data-container="body" data-trigger="hover" title="Overview" data-placement="right" data-content="See an overview of your properties."><a href="@Url.Action("Index", "Owner")"><img class="greyscale-hover" src="~/images/views/owner/Owner_Index_OverviewIcon_Active_64x64.png" /></a></li>
            <li data-toggle="popover" data-container="body" data-trigger="hover" title="Profile" data-placement="right" data-content="View your profile information (Coming Soon)"><a href="#"><img class="greyscale-hover" src="~/images/views/owner/Owner_Index_ViewProfileIcon_Active_64x64.png" /></a></li>
            <li data-toggle="popover" data-container="body" data-trigger="hover" title="Add a Home" data-placement="right" data-content="Add a home for us to manage (Coming Soon)"><a href="#"><img class="greyscale-hover" src="~/images/views/owner/Owner_Index_AddHomeIcon_Active_64x64.png" /></a></li>
            <li data-toggle="popover" data-container="body" data-trigger="hover" title="Need Help?" data-placement="right" data-html="true" data-content="<strong>Phone</strong>: (208)-991-0492 <br/> <strong>Email</strong>: support@ownapt.com"><a href="javascript:void();"><img class="greyscale-hover" src="~/images/views/owner/Owner_Index_HelpIcon_Active_64x64.png" /></a></li>
        </ul>
    </div>
}

@RenderBody()

@section Scripts{

}
