@model OwnApt.DotCom.Model.Home.HomeIndexViewModel

@{
    var authText = User.Identity.IsAuthenticated ? "Logout" : "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="At OwnApt, we believe in redefining what it means to be a property management company. We value simplicity, personality, and technology which remain at the core of everything we do.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">

    <title>OwnApt, LLC</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />


    <environment names="Development">
        <link href="~/lib/material-design-lite/material.min.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/content/css/home/Index.css" rel="stylesheet" />
        <link href="~/lib/animate.css/animate.min.css" rel="stylesheet" />

        <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
        <script src="~/lib/material-design-lite/material.min.js" type="text/javascript"></script>
        <script src="~/content/js/home/Index.js" type="text/javascript"></script>
    </environment>

    <environment names="Staging,Production">
        <link href="~/content-min/css/home/Index.min.css" rel="stylesheet" type="text/css" />
        <script src="~/content-min/js/home/Index.min.js" type="text/javascript"></script>
    </environment>
</head>
<body>
    <div class="oa-home-layout mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="oa-home-layout__header mdl-layout__header mdl-layout__header--waterfall">
            <div class="mdl-layout__header-row">
                <span class="mdl-layout-title"><img src="~/images/Logo/Logo_50x48.png" /> OwnApt</span>
                <div class="mdl-layout-spacer"></div>
                <nav id="oa-header-nav" class="mdl-navigation">
                    <a class="mdl-navigation__link" href="#oa-about">About</a>
                    <a class="mdl-navigation__link" href="#oa-services">Services</a>
                    <a class="mdl-navigation__link" href="#oa-pricing">Pricing</a>
                    <a class="mdl-navigation__link" href="#oa-contact">Contact</a>
                    <a class="mdl-navigation__link" href="@Url.Action("Index", "Listings")">Listings</a>
                    <a class="mdl-navigation__link" href="http://blog.ownapt.com">Blog</a>
                    <a class="mdl-navigation__link" href="@Url.Action(authText, "Account")">@authText</a>
                </nav>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Menu</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" href="#oa-about">About</a>
                <a class="mdl-navigation__link" href="#oa-services">Services</a>
                <a class="mdl-navigation__link" href="#oa-pricing">Pricing</a>
                <a class="mdl-navigation__link" href="#oa-contact">Contact</a>
                <a class="mdl-navigation__link" href="@Url.Action("Index", "Listings")">Listings</a>
                <a class="mdl-navigation__link" href="http://blog.ownapt.com">Blog</a>
                <a class="mdl-navigation__link" href="@Url.Action(authText, "Account")">@authText</a>
            </nav>
        </div>
        <main class="oa-home-content mdl-layout__content">
            <section class="oa-home-top oa-section">
                <div class="mdl-typography--text-center mdl-color-text--white">
                    <img width="200" height="193" src="~/images/Logo/Logo_250x241.png" />
                    <h1 class="mdl-typography--display-4">OwnApt</h1>
                    <h3 class="mdl-typography--display-2">Redefining Property Management</h3>
                    <a href="#oa-about"><button class="oa-home-button oa-home-button--orange mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">Learn More</button></a>
                    <a href="@Url.Action("Index", "Listings")"><button class="oa-home-button oa-home-button--grey mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">See Listings</button></a>
                    <a href="#oa-contact"><button class="oa-home-button oa-home-button--white mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">Get Started</button></a>
                </div>
            </section>

            @*About*@
            <section id="oa-about" class="oa-section oa-section--orange">
                <div class="mdl-typography--text-center">
                    <h3 class="mdl-typography--display-2">Redefining the Property Management World</h3>
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--middle mdl-cell--5-col-desktop mdl-cell--1-offset-desktop mdl-cell--12-col-tablet">
                            <video preload="auto" controls="controls">
                                <source src="~/videos/explainer_HD1080.mp4" type="video/mp4">
                            </video>
                        </div>
                        <div class="mdl-cell mdl-cell--middle mdl-cell--5-col-desktop mdl-cell--12-col-tablet">
                            <p class="oa-home-text__body mdl-typography--body-1">
                                We believe in a two-fold approach to reshaping what it means to be a property management company. First, we believe in fostering strong relationships and strive to deliver a Welcome Home experience with our tenants. Second, we believe in innovating property management by implementing our own cutting-edge software solutions to provide a better, faster, more reliable management service.
                            </p>
                        </div>
                    </div>
                </div>
            </section>

            @*Services*@
            <section id="oa-services" class="oa-section oa-section--white">
                <div class="mdl-typography--text-center">
                    <h3 class="mdl-typography--display-2">At Your Service</h3>
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--6-col-phone">
                            <i class="material-icons material-icons--large material-icons--orange">desktop_mac</i>
                            <p class="mdl-typography--headline">Sturdy Software</p>
                            <p class="mdl-typography--body-1">We build our own custom software and update it regularly</p>
                        </div>
                        <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--6-col-phone">
                            <i class="material-icons material-icons--large material-icons--orange">access_time</i>
                            <p class="mdl-typography--headline">Always Available</p>
                            <p class="mdl-typography--body-1">Talk to us 24/7 by call, text or email</p>
                        </div>
                        <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--6-col-phone">
                            <i class="material-icons material-icons--large material-icons--orange">home</i>
                            <p class="mdl-typography--headline">Up to Date</p>
                            <p class="mdl-typography--body-1">We stay actively informed on the latest market trends</p>
                        </div>
                        <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--6-col-phone">
                            <i class="material-icons material-icons--large material-icons--orange">lightbulb_outline</i>
                            <p class="mdl-typography--headline">Integrated</p>
                            <p class="mdl-typography--body-1">We integrate with well known sites like Craiglist and Zillow</p>
                        </div>
                        <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--6-col-phone">
                            <i class="material-icons material-icons--large material-icons--orange">insert_chart</i>
                            <p class="mdl-typography--headline">Always Improving</p>
                            <p class="mdl-typography--body-1">We analyze and provide metrics to maximize your investments</p>
                        </div>
                        <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--6-col-phone">
                            <i class="material-icons material-icons--large material-icons--orange">credit_card</i>
                            <p class="mdl-typography--headline">Online Payments</p>
                            <p class="mdl-typography--body-1">We offer online payments to tenants and online distribution to owners</p>
                        </div>
                        <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--6-col-phone">
                            <i class="material-icons material-icons--large material-icons--orange">laptop</i>
                            <p class="mdl-typography--headline">Easy to Use</p>
                            <p class="mdl-typography--body-1">We provide web based portals for both tenants and owners to make life easy</p>
                        </div>
                        <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--6-col-phone">
                            <i class="material-icons material-icons--large material-icons--orange">favorite</i>
                            <p class="mdl-typography--headline">Made With Love</p>
                            <p class="mdl-typography--body-1">We are passionate about what we do!</p>
                        </div>
                    </div>
                </div>
            </section>

            @*Photos*@
            <section class="oa-section oa-section--white">
                <div class="oa-home-content--no-margin mdl-grid">
                    <div class="mdl-cell mdl-cell--4-col-desktop">
                        <img src="~/images/portfolio/1.jpg" />
                    </div>
                    <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--hide-phone">
                        <img src="~/images/portfolio/2.jpg" />
                    </div>
                    <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--hide-tablet mdl-cell--hide-phone">
                        <img src="~/images/portfolio/3.jpg" />
                    </div>
                </div>
            </section>

            @*Pricing*@
            <section id="oa-pricing" class="oa-section oa-section--white">
                <div class="mdl-typography--text-center">
                    <h3 class="mdl-typography--display-2">Simple Pricing</h3>
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--12-col-tablet">
                            <i class="material-icons material-icons--large material-icons--orange">attach_money</i>
                            <p class="mdl-typography--headline">Easy Flat Rate</p>
                            <p class="mdl-typography--body-1">8% Flat... Yup, that's it!</p>
                        </div>
                        <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--12-col-tablet">
                            <i class="material-icons material-icons--large material-icons--orange">money_off</i>
                            <p class="mdl-typography--headline">No Other Fees</p>
                            <p class="mdl-typography--body-1">Simple pricing in, headaches out!</p>
                        </div>
                        <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--12-col-tablet">
                            <i class="material-icons material-icons--large material-icons--orange">tag_faces</i>
                            <p class="mdl-typography--headline">More Savings</p>
                            <p class="mdl-typography--body-1">More money in your pocket!</p>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col">
                            <a href="#oa-contact"><button class="oa-home-button oa-home-button--orange mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">Get Started</button></a>
                        </div>
                    </div>
                </div>
            </section>

            @*Photos*@
            <section class="oa-section oa-section--white">
                <div class="oa-home-content--no-margin mdl-grid">
                    <div class="mdl-cell mdl-cell--4-col-desktop">
                        <img src="~/images/portfolio/4.jpg" />
                    </div>
                    <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--hide-phone">
                        <img src="~/images/portfolio/5.jpg" />
                    </div>
                    <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--hide-tablet mdl-cell--hide-phone">
                        <img src="~/images/portfolio/6.jpg" />
                    </div>
                </div>
            </section>

            @*Contact*@
            <section id="oa-contact" class="oa-section oa-section--white mdl-typography--text-center">
                <h3 class="mdl-typography--display-2">Let's Get In Touch!</h3>
                <p class="oa-section__subhead mdl-typography--subhead">Ready for us to take on your properties? That's great! Just give us a call, send us a text, shoot us an email, or fill out and submit the contact form and we'll get started!</p>
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--middle mdl-cell--6-col-desktop mdl-cell--12-col-tablet">
                        <div class="mdl-grid">
                            <div class="mdl-cell mdl-cell--12-col">
                                <p><i class="material-icons material-icons--orange">phone</i> +1.208.991.0492</p>
                            </div>
                            <div class="mdl-cell mdl-cell--12-col">
                                <p><i class="material-icons material-icons--orange">email</i> support@ownapt.com</p>
                            </div>
                            <div class="mdl-cell mdl-cell--12-col">
                                <p><i class="material-icons material-icons--orange">markunread_mailbox</i> 6402 W. Bermuda Dr.<br />Boise, ID 83709</p>
                            </div>
                        </div>
                    </div>
                    <div class="mdl-cell mdl-cell--middle mdl-cell--6-col-desktop mdl-cell--12-col-tablet">
                        <div class="mdl-grid">
                            @Html.AntiForgeryToken()
                            <div class="mdl-cell mdl-cell--6-col-desktop mdl-cell--12-col-tablet">
                                <div class="mdl-textfield mdl-js-textfield">
                                    <input class="mdl-textfield__input required" pattern="-?[a-zA-Z0-9\s]*(\.[a-zA-Z0-9\s]+)?" type="text" id="firstName">
                                    <label class="mdl-textfield__label" for="firstName">First Name (required)</label>
                                    <span class="mdl-textfield__error">Only a-z, A-Z and 0-9 are allowed</span>
                                </div>
                            </div>
                            <div class="mdl-cell mdl-cell--6-col-desktop mdl-cell--12-col-tablet">
                                <div class="mdl-textfield mdl-js-textfield">
                                    <input class="mdl-textfield__input required" pattern="-?[a-zA-Z0-9\s]*(\.[a-zA-Z0-9\s]+)?" type="text" id="lastName">
                                    <label class="mdl-textfield__label" for="lastName">Last Name (required)</label>
                                    <span class="mdl-textfield__error">Only a-z, A-Z and 0-9 are allowed</span>
                                </div>
                            </div>
                            <div class="mdl-cell mdl-cell--6-col-desktop mdl-cell--12-col-tablet">
                                <div class="mdl-textfield mdl-js-textfield">
                                    <input class="mdl-textfield__input required" pattern="^\D?(\d{3})\D?\D?(\d{3})\D?(\d{4})$" type="tel" id="phoneNumber">
                                    <label class="mdl-textfield__label" for="phoneNumber">Phone # w/ Area Code (required)</label>
                                    <span class="mdl-textfield__error">Valid formats: (111)222-3333, 1112223333, or 111-222-3333</span>
                                </div>
                            </div>
                            <div class="mdl-cell mdl-cell--6-col-desktop mdl-cell--12-col-tablet">
                                <div class="mdl-textfield mdl-js-textfield">
                                    <input class="mdl-textfield__input required" type="email" id="email">
                                    <label class="mdl-textfield__label" for="email">Email (required)</label>
                                    <span class="mdl-textfield__error">Invalid email format</span>
                                </div>
                            </div>
                            <div class="mdl-cell mdl-cell--12-col">
                                <div class="mdl-textfield mdl-js-textfield">
                                    <textarea class="mdl-textfield__input" type="text" rows="3" id="message"></textarea>
                                    <label class="mdl-textfield__label" for="message">Message (optional)</label>
                                </div>
                                <span id="message-count-remaining" class="mdl-typography--caption">1000 / 1000</span>
                            </div>
                            <div class="mdl-cell mdl-cell--12-col">
                                <button id="oa-submitform" class="oa-home-button oa-home-button--orange mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <footer class="mdl-mini-footer">
                <div class="mdl-mini-footer--left-section">
                    <div class="mdl-typography--body-1">&copy; @DateTime.Now.Year OwnApt, LLC | All Rights Reserved.</div>
                </div>
                <div class="mdl-mini-footer--right-section">
                    <div class="mdl-typography--body-1"><a class="mdl-navigation__link" href="#"><i class="fa fa-2x fa-facebook"></i></a></div>
                </div>
            </footer>
        </main>
    </div>
    <div id="oa-home-toast" class="mdl-js-snackbar mdl-snackbar mdl-color--white">
        <div class="mdl-snackbar__text mdl-color-text--deep-orange"></div>
        <button class="mdl-snackbar__action" type="button"></button>
    </div>

    @*Google Analytics*@
    <script>(function (i, s, o, g, r, a, m) { i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () { (i[r].q = i[r].q || []).push(arguments) }, i[r].l = 1 * new Date(); a = s.createElement(o), m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m) })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga'); ga('create', 'UA-77180345-1', 'auto'); ga('send', 'pageview');</script>
</body>
</html>