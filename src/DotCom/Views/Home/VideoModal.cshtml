<div id="videoModal" class="modal fade" role="dialog" aria-labelledby="videoModallLabel" aria-hidden="true">
    <div class="modal-dialog bg-dark">
        <div class="modal-content bg-dark">
            <iframe style="width: 100%; height: 75%;" frameborder="0" allowfullscreen=""></iframe>
        </div>
    </div>
</div>

<script>
    $('#playVideo').click(function () {
        $('#videoModal').modal('show');
        $('#videoModal iframe').attr('src', '/videos/explainer_HD1080.mp4');
    });

    $('#videoModal').on('hidden.bs.modal', function () {
        $('#videoModal iframe').removeAttr('src');
    });
</script>