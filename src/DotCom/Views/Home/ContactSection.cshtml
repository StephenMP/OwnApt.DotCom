<section class="container-fluid" id="contact">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 text-center">
            <h2 class="section-heading">Let's Get In Touch!</h2>
            <hr class="primary">
            <p>
                Ready for us to take on your properties? That's great! Give us a call or send us an
                email and we will get back to you as soon as possible!
            </p>
        </div>
        <div class="col-lg-4 col-lg-offset-2 text-center">
            <i class="fa fa-phone fa-3x wow bounceIn"></i>
            <p>Call or Text: (208) 991-0492</p>
        </div>
        <div class="col-lg-4 text-center">
            <i class="fa fa-envelope-o fa-3x wow bounceIn" data-wow-delay=".1s"></i>
            <p><a href="mailto:support@@ownapt.com">support@@ownapt.com</a></p>
        </div>
    </div>

    <div class="text-center">
        <a href="javascript:void(0);" id="contactFormToggle" class="btn btn-primary btn-xl">Contact Form</a>
    </div>

    <form id="contactForm" class="row" hidden>
        <div class="row form-group">
            <div class="col-lg-6">
                <div class="input-group">
                    <span class="input-group-addon">First Name</span>
                    <input type="text" id="firstName" placeholder="John" class="form-control required" aria-label="First Name">
                </div><!-- /input-group -->
            </div>

            <div class="col-lg-6">
                <div class="input-group">
                    <span class="input-group-addon">Last Name</span>
                    <input type="text" id="lastName" placeholder="Doe" class="form-control required" aria-label="Last Name">
                </div><!-- /input-group -->
            </div>
        </div><!-- /.col-lg-6 -->

        <div class="row form-group">
            <div class="col-lg-6">
                <div class="input-group">
                    <span class="input-group-addon">Email</span>
                    <input type="text" id="email" placeholder="user@domain.com" class="form-control required" aria-label="Email">
                </div><!-- /input-group -->
            </div>
            <div class="col-lg-6">
                <div class="input-group">
                    <span class="input-group-addon">Phone #</span>
                    <input type="text" id="phone" placeholder="(123)456-7890" class="form-control required" aria-label="Phone Number">
                </div><!-- /input-group -->
            </div>
        </div><!-- /.col-lg-6 -->

        <div class="row form-group">
            <span class="input-group-addon">Message</span>
            <textarea type="text" rows="5" id="message" placeholder="Type up to 1000 characters" class="form-control required" aria-label="Phone Number"></textarea>
            <span id="charCount">0/1000</span>
        </div><!-- /.col-lg-6 -->

        <div class="row form-group">
            <div class="text-center">
                <div class="btn-group">
                    <a href="javascript:void(0);" id="contactFormCancel" class="btn btn-grey btn-xl">Cancel</a>
                    <a href="javascript:void(0);" id="contactFormSubmit" class="btn btn-primary btn-xl">Submit</a>
                </div>
            </div>
        </div>
    </form>
</section>

<script src="~/lib-unmanaged/contact-form/js/contactForm.js"></script>
<script>
    ContactForm.SubmitUrl = '@Url.Action("SubmitForm", "Home")'
</script>