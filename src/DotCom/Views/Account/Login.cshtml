@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "OwnApt, LLC - Login";
    ViewData["MetaDescription"] = "Login to the OwnApt Owner Portal and access all of your account and property information.";
}

@model OwnApt.DotCom.Model.Account.LockContextModel

<script>
    var redirectUrl = '@Model.CallbackUrl';
    var state= '@Model.State';
    var nonce= '@Model.Nonce';

    var lockOptions = {
        closable: false,
        allowSignUp: false,
        auth: {
            redirectUrl: redirectUrl,
            responseType: 'code',
            params: {
                state: state,
                nonce: nonce,
                scope: 'openid email'
            }
        },
        theme: {
            logo: '@Url.Content("~/images/Logo/Logo_50x48.png")',
            primaryColor: '#f05f40'
        },
        languageDictionary: {
            title: "OwnApt, LLC"
        }
    };

    var lock = new Auth0Lock('@Model.ClientId', '@Model.Domain', lockOptions).show();
</script>