<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @*Favicon*@
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />

    @*Google Material Icons*@
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    @*<environment names="Development">*@
        <link href="~/lib/material-design-lite/material.min.css"rel="stylesheet" type="text/css" />
        <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
        <link href="~/content/css/shared/_Layout.css" rel="stylesheet" type="text/css" />

        <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
        <script src="~/lib/material-design-lite/material.min.js" type="text/javascript"></script>
    @*</environment>

    <environment names="Staging,Production">
        <link href="~/content-min/css/shared/_Layout.min.css" rel="stylesheet" type="text/css" />
        <script src="~/content-min/js/shared/_Layout.min.js" type="text/javascript"></script>
    </environment>*@

    @RenderSection("_LayoutStyles", false)
    @RenderSection("_LayoutScripts", false)
</head>

<body id="oa-owner-body">
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header mdl-layout--fixed-drawer">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <span class="mdl-layout-title"><img src="~/images/Logo/Logo_50x48.png" /> OwnApt</span>
                <div class="mdl-layout-spacer"></div>
                <nav class="mdl-navigation">
                    @RenderSection("_LayoutHeaderLinks", true)
                </nav>
            </div>
            @if (!Convert.ToBoolean(User.Claims.FirstOrDefault(c => c.Type == "email_verified").Value))
            {
                <div class="mdl-layout__header-row">
                    <span>Pease Verify Your Email Address</span>
                </div>
            }
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title"></span>
            <nav class="mdl-navigation">
                <h5 class="oa-owner-drawer__subtitle">Pages</h5>
                @RenderSection("_LayoutDrawerLinks", true)
            </nav>
        </div>
        <main class="mdl-layout__content">
            @RenderBody()
        </main>
    </div>
</body>
</html>
